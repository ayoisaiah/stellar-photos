{
  "name": "stellar-photos",
  "type": "module",
  "version": "4.1.2",
  "description": "Beautiful high-res photos in your browser tabs. Available for Google Chrome, Microsoft Edge, Brave, Vivaldi and Firefox",
  "main": "src/js/index.js",
  "repository": "git@github.com:ayoisaiah/stellar-photos.git",
  "author": "Ayooluwa Isaiah <ayo@freshman.tech>",
  "license": "MIT",
  "scripts": {
    "build:firefox:dev": "BROWSER=firefox nodemon build.js",
    "build:chrome:dev": "BROWSER=chrome nodemon build.js",
    "build:firefox:prod": "BROWSER=firefox NODE_ENV=production node build.js",
    "build:chrome:prod": "BROWSER=chrome NODE_ENV=production node build.js",
    "test": "vitest",
    "lint": "lit-analyzer && eslint --fix .",
    "fmt": "prettier -w .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^3.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "^0.0.254",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.11",
    "esbuild-plugin-inline-image": "^0.0.9",
    "esbuild-plugin-inline-import": "^1.0.2",
    "esbuild-plugin-json-merge": "^0.1.0",
    "esbuild-plugin-replace": "^1.4.0",
    "esbuild-sass-plugin": "^2.16.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.0.0"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.6.0",
    "bulma": "^0.9.4",
    "dompurify": "^3.0.6",
    "ladda": "^2.0.3",
    "lit-html": "^3.1.0",
    "runtypes": "^6.7.0",
    "timeago.js": "^4.0.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.(css|scss)": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "20.10.0"
  }
}
