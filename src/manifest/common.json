{
  "manifest_version": 2,
  "name": "Stellar Photos",
  "version": "3.0.0",
  "description": "Experience a beautiful photo from Unsplash every time you open a new tab alongside current weather information for your city",

  "icons": {
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": ["storage", "unlimitedStorage", "notifications", "alarms"],

  "background": {
    "scripts": ["js/background.bundle.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "https://ayoisaiah.github.io/stellar-photos/*",
        "http://localhost:3000/*"
      ],
      "js": ["js/tab.bundle.js"]
    }
  ],

  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
